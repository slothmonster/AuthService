<head>
    <title>Manage Users</title>
    <link rel="stylesheet" type="text/css" href="assets/css/auth.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
</head>
<body>
    <div id="universalNav">
        <ul>
            <li><a href="/" class="current">Account Home</a></li>
            <li><a href="changePassword.html">Change My Password</a></li>
            {{#hasRoleUserAdmin}}<li><a href="manageUsers.html">Manage Users</a></li>{{/hasRoleUserAdmin}}
        </ul>
    </div>
    <div id="user">
        <span>Hi,&nbsp;</span><span id="displayName">{{verifiedUserToken.userAccount.displayName}}</span>
        <a id="logoutLink" href="logout.html">logout</a>
    </div>

    <h1>Manage Users</h1>

    <div id="message">{{message}}</div>

    <div id="manageUsers">

    	<ul class="links">
            <li><a href="createUser.html" class="linkButton">New User</a></li>
        </ul>

        <table class="userList" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <th class="displayNameCol">Display Name</th>
                <th class="userNameCol">User Name</th>
            </tr>
            {{#userList}}
            <tr id="{{displayName}}">
                <td><a href="editUser.html?userName={{name}}">{{displayName}}</a></td>
                <td>{{name}}</td>
            </tr>
            {{/userList}}
        </table>
    </div>
</body>
